{
    "name": "@nixizhiyuan/server",
    "version": "1.0.0",
    "description": "NestJS 11 后台框架 - 完整的后台开发解决方案",
    "author": "",
    "private": true,
    "license": "MIT",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "npx cross-env NODE_ENV=development nest start --watch",
        "start:debug": "npx cross-env NODE_ENV=development nest start --debug --watch",
        "start:prod": "npx cross-env NODE_ENV=production node dist/main",
        "start:test": "npx cross-env NODE_ENV=test nest start --watch",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "npx cross-env NODE_ENV=test jest",
        "test:watch": "npx cross-env NODE_ENV=test jest --watch",
        "test:cov": "npx cross-env NODE_ENV=test jest --coverage",
        "test:debug": "npx cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "npx cross-env NODE_ENV=test jest --config ./test/jest-e2e.json",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate -d ormconfig.ts",
        "migration:run": "typeorm-ts-node-commonjs migration:run -d ormconfig.ts",
        "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ormconfig.ts"
    },
    "dependencies": {
        "@nestjs/common": "^10.2.7",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^10.2.7",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.2.7",
        "@nestjs/serve-static": "^4.0.0",
        "@nestjs/swagger": "^7.1.17",
        "@nestjs/terminus": "^10.1.1",
        "@nestjs/typeorm": "^10.0.1",
        "@types/passport-oauth2": "^1.8.0",
        "@types/pdfkit": "^0.17.4",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "express-basic-auth": "^1.2.1",
        "helmet": "^7.1.0",
        "nestjs-pino": "^4.0.0",
        "passport": "^0.7.0",
        "passport-custom": "^1.1.1",
        "passport-jwt": "^4.0.1",
        "passport-oauth2": "^1.8.0",
        "pdfkit": "^0.17.2",
        "pg": "^8.11.3",
        "pino": "^8.16.2",
        "pino-http": "^9.0.0",
        "pino-pretty": "^10.2.3",
        "redis": "^4.6.12",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.19"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.2.1",
        "@nestjs/schematics": "^10.0.3",
        "@nestjs/testing": "^10.2.7",
        "@types/compression": "^1.7.5",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.3",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.7.0",
        "prettier": "^3.2.4",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
