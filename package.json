{
  "name": "nixizhiyuan",
  "version": "1.0.0",
  "description": "项目根目录 - 使用 npm workspaces 管理多个子项目",
  "private": true,
  "workspaces": [
    "server",
    "miniapp"
  ],
  "scripts": {
    "server:dev": "npm run start:dev --workspace=server",
    "server:build": "npm run build --workspace=server",
    "server:start": "npm run start --workspace=server",
    "server:start:prod": "npm run start:prod --workspace=server",
    "server:test": "npm run test --workspace=server",
    "server:lint": "npm run lint --workspace=server",
    "miniapp:dev": "npm run dev --workspace=miniapp",
    "miniapp:build": "npm run build --workspace=miniapp",
    "miniapp:test": "npm run test --workspace=miniapp",
    "clean": "npm run clean --workspaces --if-present",
    "build:all": "npm run build --workspaces --if-present"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "prettier": "^3.2.4"
  }
}

